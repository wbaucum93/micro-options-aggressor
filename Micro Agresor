        let accountState = {
            totalValue: 50,
            cash: 50,
            initialBalance: 50,
            positions: []
        };

        function updateAccountDisplay() {
            const changeAmount = accountState.totalValue - accountState.initialBalance;
            const changePercent = ((changeAmount / accountState.initialBalance) * 100).toFixed(1);
            const changeClass = changeAmount >= 0 ? 'positive' : 'negative';
            const changeSign = changeAmount >= 0 ? '+' : '';

            document.getElementById('accountValue').textContent = `$${accountState.totalValue.toFixed(2)}`;
            document.getElementById('availableCash').textContent = `$${accountState.cash.toFixed(2)}`;
            document.getElementById('openPositions').textContent = accountState.positions.length;
            
            const changeEl = document.getElementById('accountChange');
            changeEl.textContent = `${changeSign}$${changeAmount.toFixed(2)} (${changeSign}${changePercent}%)`;
            changeEl.className = `change ${changeClass}`;
        }

        async function fetchRealTimeData(ticker) {
            try {
                // Get quote data
                const quoteUrl = `${API_BASE_URL}?function=GLOBAL_QUOTE&symbol=${ticker}&apikey=${ALPHA_VANTAGE_API_KEY}`;
                const quoteResponse = await fetch(quoteUrl);
                const quoteData = await quoteResponse.json();
                
                if (quoteData['Global Quote']) {
                    const quote = quoteData['Global Quote'];
                    return {
                        price: parseFloat(quote['05. price']),
                        change: parseFloat(quote['10. change percent'].replace('%', '')),
                        volume: parseInt(quote['06. volume'])
                    };
                }
                return null;
            } catch (error) {
                console.error(`Error fetching ${ticker}:`, error);
                return null;
            }
        }

        async function scanMarket() {
            const container = document.getElementById('opportunitiesContainer');
            container.innerHTML = '<div class="loading">üîÑ Scanning market with Alpha Vantage API...</div>';

            // Watchlist of aggressive options candidates
            const watchlist = ['SQQQ', 'UVXY', 'PLUG', 'RIVN', 'LCID', 'NIO', 'TSLA', 'AMD', 'NVDA', 'PLTR'];
            const liveData = [];

            // Fetch live data for each ticker
            for (let i = 0; i < Math.min(6, watchlist.length); i++) {
                const ticker = watchlist[i];
                const data = await fetchRealTimeData(ticker);
                
                if (data) {
                    // Calculate synthetic metrics (in production, would use technical indicators API)
                    const relVolume = 1.5 + Math.random() * 1.5;
                    const rsi = Math.floor(25 + Math.random() * 30);
                    const vwap = data.price * (0.98 + Math.random() * 0.04);
                    
                    // Generate option strategy based on current price
                    const strategy = generateOptionStrategy(data.price, ticker);
                    
                    liveData.push({
                        ticker: ticker,
                        price: data.price,
                        change: data.change,
                        volume: data.volume,
                        relVolume: relVolume,
                        rsi: rsi,
                        vwap: vwap,
                        catalyst: getCatalyst(ticker, data.change, rsi),
                        strategy: strategy,
                        score: calculateScore(data.change, relVolume, rsi, strategy.potentialReturn)
                    });
                }
                
                // Respect API rate limits (5 calls per minute for free tier)
                if (i < watchlist.length - 1) {
                    await new Promise(resolve => setTimeout(resolve, 12000)); // 12 second delay
                }
            }

            // Sort by score
            liveData.sort((a, b) => b.score - a.score);
            
            // Render results
            setTimeout(() => {
                renderOpportunities(liveData.length > 0 ? liveData : marketData);
            }, 500);
        }

        function generateOptionStrategy(stockPrice, ticker) {
            // Generate realistic option strategy based on stock price
            const isLowPrice = stockPrice < 5;
            const strikeMultiplier = isLowPrice ? 1.15 : 1.08;
            const strike = Math.round((stockPrice * strikeMultiplier) * 2) / 2; // Round to nearest $0.50
            
            const dte = [2, 7, 14][Math.floor(Math.random() * 3)];
            const cost = Math.max(8, Math.min(48, Math.floor(stockPrice * 0.8 + Math.random() * 15)));
            const breakeven = strike + (cost / 100);
            const targetPrice = strike * 1.25;
            const potentialReturn = Math.floor(((targetPrice - breakeven) / (cost / 100)) * 100);
            
            return {
                name: `$${strike} Call - ${dte} DTE`,
                cost: cost,
                strike: strike,
                dte: dte,
                breakeven: breakeven,
                targetPrice: targetPrice,
                potentialReturn: Math.min(500, Math.max(150, potentialReturn)),
                impliedVol: Math.floor(80 + Math.random() * 90),
                delta: (0.22 + Math.random() * 0.18).toFixed(2)
            };
        }

        function getCatalyst(ticker, change, rsi) {
            const catalysts = {
                'SQQQ': 'Tech selloff momentum, inverse QQQ 3x leverage',
                'UVXY': 'VIX spike potential, market fear increasing',
                'PLUG': 'Oversold bounce potential, hydrogen sector attention',
                'RIVN': 'R2 production ramp, EV sector momentum',
                'LCID': 'Extreme oversold, potential dead cat bounce',
                'NIO': 'China EV sales data upcoming, momentum building',
                'TSLA': 'High volatility, earnings catalyst upcoming',
                'AMD': 'AI chip demand, datacenter growth',
                'NVDA': 'AI leadership, momentum continuation',
                'PLTR': 'Government contracts, AI platform growth'
            };
            
            let catalyst = catalysts[ticker] || 'High momentum opportunity';
            
            if (rsi < 30) catalyst += ', deeply oversold';
            if (Math.abs(change) > 3) catalyst += ', extreme volatility';
            
            return catalyst;
        }

        function calculateScore(change, relVolume, rsi, potentialReturn) {
            // Scoring algorithm for aggressive opportunities
            let score = 50;
            
            // Volume factor (0-20 points)
            score += Math.min(20, relVolume * 8);
            
            // Volatility factor (0-20 points)
            score += Math.min(20, Math.abs(change) * 3);
            
            // Oversold factor (0-20 points)
            if (rsi < 30) score += 20;
            else if (rsi < 40) score += 10;
            
            // Potential return factor (0-20 points)
            score += Math.min(20, potentialReturn / 15);
            
            return Math.min(99, Math.floor(score));
        }

        function renderOpportunities(data) {
            const container = document.getElementById('opportunitiesContainer');
            
            if (data.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <h3>No Opportunities Found</h3>
                        <p>Adjust your filters and try again</p>
                    </div>
                `;
                return;
            }

            const maxCost = parseFloat(document.getElementById('maxCostFilter').value) || 50;
            const filteredData = data.filter(opp => opp.strategy.cost <= maxCost);

            container.innerHTML = filteredData.map(opp => `
                <div class="opportunity-card">
                    <div class="opportunity-header">
                        <div class="ticker-info">
                            <div class="ticker">${opp.ticker}</div>
